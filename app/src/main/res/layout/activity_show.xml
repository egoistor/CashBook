<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.ShowActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/bule">

        <include layout="@layout/title_show"/>

        <LinearLayout style="@style/common_horizontal_division_line_style" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/bule">

            <TextView
                android:layout_width="240sp"
                android:layout_height="wrap_content"
                android:text="支出or收入"
                android:textSize="36sp"
                android:background="@color/bule"
                android:textColor="@color/pink"/>

            <TextView
                android:id="@+id/show_tag"
                android:layout_width="240sp"
                android:layout_height="wrap_content"
                android:textSize="36dp"
                android:background="@color/bule"
                android:textColor="@color/pink"/>

        </LinearLayout>

        <LinearLayout style="@style/common_horizontal_division_line_style" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/bule">

            <TextView
                android:layout_width="240sp"
                android:layout_height="wrap_content"
                android:text="类型:"
                android:textSize="36sp"
                android:background="@color/bule"
                android:textColor="@color/pink"/>

            <TextView
                android:id="@+id/show_type"
                android:layout_width="240sp"
                android:layout_height="wrap_content"
                android:textSize="36dp"
                android:background="@color/bule"
                android:textColor="@color/pink"/>

        </LinearLayout>

        <LinearLayout style="@style/common_horizontal_division_line_style" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/bule">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="金额:"
                android:textSize="36sp"
                android:background="@color/bule"
                android:textColor="@color/pink"/>

            <TextView
                android:id="@+id/show_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="36dp"
                android:background="@color/bule"
                android:textColor="@color/pink"/>

        </LinearLayout>

        <LinearLayout style="@style/common_horizontal_division_line_style" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/bule">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="备忘录："
                android:textSize="36sp"
                android:background="@color/bule"
                android:textColor="@color/pink"/>

            <TextView
                android:id="@+id/show_note"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:background="@color/bule"
                android:textColor="@color/pink"/>

        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>